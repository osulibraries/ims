<% collection = Hydra::Admin::Collection.find(noid) %>
<div class="btn-group">
  <button class="btn btn-sm dropdown-toggle" data-toggle="dropdown" type="button" id="dropdownMenu_<%= noid %>" aria-haspopup="true">
    <span class="sr-only">Press to </span>
    Select an action <span class="caret" aria-hidden="true"></span>
  </button>
  <ul role="menu" class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu_<%= noid %>">
    <li role="menuitem" tabindex="-1">
      <%= link_to raw('<i class="glyphicon glyphicon-pencil" aria-hidden="true"></i> Edit ' + t('admin_set_name')), edit_hydra_admin_collection_path(noid),
                  class: 'itemicon itemedit', title: "Edit #{t('admin_set_name')}" %>
    </li>
    <% if collection.members.count == 0 %>
        <li role="menuitem" tabindex="-1">
          <%= link_to raw('<i class="glyphicon glyphicon-trash" aria-hidden="true"></i> Delete ' + t('admin_set_name') ), hydra_admin_collection_path(noid),
                      class: 'itemicon itemtrash', title: "Delete #{t('admin_set_name')}", method: :delete, data: {
                          confirm: "Deleting a #{t('admin_set_name')} from the #{t('sufia.product_name')} is permanent. Click OK to delete this #{t('admin_set_name')} from #{t('sufia.product_name')}, or Cancel to cancel this operation"} %>
        </li>
    <% end %>
  </ul>
</div>
