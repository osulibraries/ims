<% @page_title = "#{@collection.title} - #{application_name}" %>

<%= render_breadcrumbs builder: Sufia::BootstrapBreadcrumbsBuilder %>

<div itemscope itemtype="http://schema.org/CollectionPage" class="row">
  <div class="col-sm-10 pull-right">
    <div class="row">
      <div class="col-sm-7">
        <header>
          <h1><%= @collection.title %></h1>
          <p class="collection_description"><%=@collection.description%></p>
        </header>

        <%# unless has_collection_search_parameters? %>
          <%= render partial: 'show_descriptions', locals: { generic_file: @collection } %>
        <%# end %>
      </div>
      <div class="col-sm-5">
        <%= render partial: 'shared/show_unit_details', locals: {unit: @collection.unit_group} %>
      </div>
    </div>

    

    
  </div>
  <div class="col-sm-2">
    <%= render partial: 'media_display', locals: { generic_file: @collection } %>
    <% unless has_collection_search_parameters? %>
        <%= render partial: 'show_actions', locals: { collection: @collection } %>
    <% end %>
  </div>
</div>

<%= render 'sort_and_per_page' %>

<% if has_collection_search_parameters? %>
    <% header_title = t("admin_set.show.search_params") %>
<% else %>
    <% header_title = t("admin_set.show.no_search_params") %>
<% end %>

<div>
  <!-- Use CSS class h2 rather than HTML h2 tag to allow header and search box to align vertically -->
  <span class="h2"><%= header_title %></span>
  <%#= render partial: 'collections/search_form'%>
</div>

<% @user ||= current_user %>

<%= render_document_index @member_docs %>

<%= render partial: 'paginate' %>
