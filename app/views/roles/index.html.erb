<div class="row">
  <div class="col-xs-6">
    <h1><%= t('Role') %>s</h1>
  </div>
  <div class="col-xs-6">
    <%# if can? :create, Role %>
        <%#= button_to "New", role_management.new_role_path, method: :get, class: 'btn btn-primary' %>

        <%#= link_to  new_role_path, method: :get, :class => 'btn btn-success pull-right' do %>    
          <!-- <span class="glyphicon glyphicon-plus"></span> New -->
        <%# end %>
    <%# end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th colspan="4" class="text-left">Roles</th>
      </tr>
      </thead>

      <tbody>
      <% @roles.each do |role| %>
          <tr>
            <td><%= link_to role.name, edit_role_path(role) %></td>
            <td>
              <% if can? :destroy, Role %>
                  <%= link_to 'Destroy', role_path(role), method: :delete, data: {confirm: 'Are you sure?'} %>
              <% end %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
