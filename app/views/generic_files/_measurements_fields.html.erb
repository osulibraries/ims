<div class="well">
<h4>Measurements</h4>
<div id="measurement-fields" class="form-inline">
  <div class="items">
    <%= f.nested_fields_for :measurements do |fields| %>
      <fieldset class="item">

        <div class="form-group">
          <%= fields.label :measurement %>
          <%= fields.text_field :measurement, class: "form-control generic_file_measurement" %>
        </div>
        <div class="form-group">
          <%= fields.label "Unit" %>
          <%= fields.text_field :measurement_unit, class: "form-control generic_file_measurement_unit"  %>
        </div>

        <div class="form-group">
          <%= fields.label 'Type'%>
          <%= fields.text_field :measurement_type, class: "form-control generic_file_measurement_type"  %>
        </div>

        <a href="#" class="remove btn btn-danger"><span class="glyphicon glyphicon-minus"></span> Remove</a>

        <%= fields.hidden_field :id %>
        <%= fields.hidden_field :_destroy %>
      </fieldset>
    <% end %>
  </div>
  <a href="#" class="add btn btn-success"><span class='glyphicon glyphicon-plus'></span> Add</a>
</div>
</div>
